  gem 'rspec'            , '~> 2.10.0'
  gem 'yard'             , '~> 0.8.1'
  gem 'railsless-deploy' , '~> 1.0.0'
  gem 'simplecov'        , '~> 0.6.4'
  gem 'capistrano'       , '~> 2.9.0'
  gem 'capistrano-ext'   , '~> 1.2.0'
  gem 'capistrano_colors', '~> 0.5.0'
end

