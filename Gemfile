source 'http://rubygems.org'

tengine_version = "1.2.0"

gem 'tengine_core'         , "~> #{tengine_version}"
gem 'tengine_event'        , "~> #{tengine_version}"
gem 'tengine_job'          , "~> #{tengine_version}"
gem 'tengine_resource'     , "~> #{tengine_version}"
gem 'tengine_resource_ec2' , "~> #{tengine_version}"
gem 'tengine_support'      , "~> #{tengine_version}"
gem 'tengine_job_agent'    , "~> #{tengine_version}"

group :development do
  gem 'bundler'
  gem 'rake'
  gem 'rspec'            , '~> 2.10.0'
  gem 'yard'
  gem 'railsless-deploy'
  gem 'simplecov'
  gem 'capistrano'
  gem 'capistrano-ext'
  gem 'capistrano_colors'
end

